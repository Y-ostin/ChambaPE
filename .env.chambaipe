# ChambaPE - Variables de Entorno

NODE_ENV=development
APP_PORT=3000
APP_NAME="ChambaPE API"
APP_FALLBACK_LANGUAGE=es
APP_HEADER_LANGUAGE=x-custom-lang
FRONTEND_DOMAIN=http://localhost:3000
BACKEND_DOMAIN=http://localhost:3000

# Database Configuration (PostgreSQL with PostGIS for geolocation)
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=chambauser
DATABASE_PASSWORD=chambapass123
DATABASE_NAME=chambadb
DATABASE_SYNCHRONIZE=false
DATABASE_MAX_CONNECTIONS=100
DATABASE_SSL_ENABLED=false
DATABASE_REJECT_UNAUTHORIZED=false
DATABASE_CA=
DATABASE_KEY=
DATABASE_CERT=
DATABASE_URL=

# AWS Configuration for file storage
FILE_DRIVER=s3
ACCESS_KEY_ID=your_aws_access_key
SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_REGION=us-east-1
AWS_DEFAULT_S3_BUCKET=chambaipe-documents

# Email Configuration (usando Gmail SMTP para pruebas)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_IGNORE_TLS=false
MAIL_SECURE=false
MAIL_REQUIRE_TLS=true
MAIL_DEFAULT_EMAIL=noreply@chambaipe.com
MAIL_DEFAULT_NAME=ChambaPE
MAIL_CLIENT_PORT=1080

# JWT Configuration
AUTH_JWT_SECRET=your_super_secret_jwt_key_chambaipe_2025
AUTH_JWT_TOKEN_EXPIRES_IN=15m
AUTH_REFRESH_SECRET=your_super_secret_refresh_key_chambaipe_2025
AUTH_REFRESH_TOKEN_EXPIRES_IN=30d
AUTH_FORGOT_SECRET=your_super_secret_forgot_key_chambaipe_2025
AUTH_FORGOT_TOKEN_EXPIRES_IN=30m
AUTH_CONFIRM_EMAIL_SECRET=your_super_secret_confirm_key_chambaipe_2025
AUTH_CONFIRM_EMAIL_TOKEN_EXPIRES_IN=1d

# Payment Gateway (Culqi for Peru)
CULQI_PUBLIC_KEY=pk_test_your_culqi_public_key
CULQI_SECRET_KEY=sk_test_your_culqi_secret_key
CULQI_WEBHOOK_SECRET=your_culqi_webhook_secret

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=chambaipe-firebase
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@chambaipe.iam.gserviceaccount.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# External APIs for document validation (Peru)
RENIEC_API_URL=https://api.reniec.gob.pe
RENIEC_API_KEY=your_reniec_api_key
SUNAT_API_URL=https://api.sunat.gob.pe
SUNAT_API_KEY=your_sunat_api_key

# Geolocation Settings
DEFAULT_SEARCH_RADIUS_KM=10
MAX_SEARCH_RADIUS_KM=50
MINIMUM_RATING_FOR_MATCHING=3.0

# Business Logic Settings
WORKER_MONTHLY_SUBSCRIPTION_PRICE=50.00
PLATFORM_COMMISSION_PERCENTAGE=10
MATCH_EXPIRATION_MINUTES=15
MINIMUM_JOB_BUDGET=20.00

# Redis for caching and sessions (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring and Logging
LOG_LEVEL=debug
SENTRY_DSN=your_sentry_dsn_for_error_tracking
