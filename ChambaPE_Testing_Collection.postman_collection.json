              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"cliente.test@chambaipe.com\",\n  \"password\": \"secret123\",\n  \"firstName\": \"Duplicate\",\n  \"lastName\": \"Test\"\n}"
