{
  "info": {
    "name": "ChambaPE API - Testing Exhaustivo",
    "description": "Colección completa para testing de la API ChambaPE - Sistema de matching de trabajos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "workerToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "clientUserId",
      "value": "",
      "type": "string"
    },
    {
      "key": "workerUserId",
      "value": "",
      "type": "string"
    },
    {
      "key": "jobId",
      "value": "",
      "type": "string"
    },
    {
      "key": "workerId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Setup & Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3000",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000"
            }
          }
        },
        {
          "name": "Service Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/service-categories",
              "host": ["{{baseUrl}}"],
              "path": ["service-categories"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Autenticación Cliente",
      "item": [
        {
          "name": "Registrar Cliente",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"cliente.test@chambaipe.com\",\n  \"password\": \"secret123\",\n  \"firstName\": \"Cliente\",\n  \"lastName\": \"Test\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/email/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "email", "register"]
            }
          }
        },
        {
          "name": "Login Cliente",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"cliente.test@chambaipe.com\",\n  \"password\": \"secret123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/email/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "email", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', jsonData.token);",
                  "    pm.collectionVariables.set('clientUserId', jsonData.user.id);",
                  "    console.log('Token guardado:', jsonData.token.substring(0,20) + '...');",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Mi Perfil Cliente",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Autenticación Trabajador",
      "item": [
